<%init>
use Data::Dumper;
my $ref = $c->stash->{records};

</%init>

<% $c->stash->{error_msg} %>


% foreach my $rec ( keys %{$ref} ) {
<div id="book_container">
    <span id="img_<% $rec %>" style="float:left">
    <img src="<% $ref->{$rec}->{smallimage} %>" height="<% $ref->{$rec}->{smallimageheight} %>" width="<% $ref->{$rec}->{smallimagewidth} %>" class="smallimg"/>
    </span>
    <span id="details_<% $rec %>" style="float:right">
    <% $rec %><br/>
    <b><% $ref->{$rec}->{title} %></b><br/>
    <% $ref->{$rec}->{author} %><br/>

    Publish Date: <% $ref->{$rec}->{pubdate} %><br/>
    Newest Low Price: <% $ref->{$rec}->{formattedprice} %><br/>
    <a href="<% $ref->{$rec}->{detailpageurl} %>">View Details</a>
    </span>
</div>
<br clear="all"/>
% }
