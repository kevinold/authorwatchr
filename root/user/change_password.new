<%init>
use Data::Dumper;
my $fb = $c->stash->{FormBuilder};
</%init>

<% $fb->start %>
<div id="form">
% foreach my $field ( $fb->fields ) {
<p>
    <label>
        <span <% $field->required ? 'class="required"' : ''%> ><% $field->label %></span>
    </label>
    <input type="<% $field->type %>" name="<% $field %>" size="<% $field->size %>" />
    </p>
% }
<div id="submit"><% $fb->submit %></div>
<div id="reset"><% $fb->reset %></div>
</div>
<% $fb->end %>

